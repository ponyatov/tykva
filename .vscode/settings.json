{
    "multiCommand.commands": [
        { "command": "multiCommand.f11",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make format doxy \u000D"}}]},
        { "command": "multiCommand.f12",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make run \u000D"}}]}
    ],

    // files
    "files.exclude": {
        "docs/**": true,
        ".vscode/*.log": true,
    },
    "files.watcherExclude": {
        "docs/**": true,
        "ref/**": true,
    },
    "files.associations": {
    },

    // editor
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],
    "workbench.tree.indent": 24,
    "explorer.autoReveal": false,
    "files.insertFinalNewline": true,
    "git.enabled": false,

    // C++
    "[c,cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     true
    },
    "C_Cpp.intelliSenseEngine":    "Tag Parser",

    // cmake
    "cmake.configureSettings": {"APP": "${workspaceFolderBasename}"},
    "cmake.sourceDirectory"  : "${workspaceFolder}",
    "cmake.buildDirectory"   : "${workspaceFolder}/tmp/build",
	"cmake.generator"        : "Unix Makefiles",
    "cmake.configureOnOpen"  : false,
    "cmake.debugConfig"      : {
        "cwd": "${workspaceFolder}",
        "args": [
            "${workspaceFolder}/lib/${workspaceFolderBasename}.ini"
        ]},
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    // clang-format
    "clang-format.executable":    "clang-format",
    "clang-format.fallbackStyle": "Google",
    "clang-format.style":         "file",

    // D
    "d.projectImportPaths": [
        "${userHome}/D/ref",
        "${userHome}/.dub/packages"
    ],
    "dscanner.ignoredKeys": [
        "dscanner.style.phobos_naming_convention",
        "dscanner.style.long_line"
    ],
    "d.dubPath":     "/usr/bin/dub",
    "d.dubCompiler": "ldc"
}
